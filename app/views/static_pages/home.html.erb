<% if logged_in? %>

    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <%= render 'shared/user_info' %>
            </section>
            <section class="stats">
                <%= render 'shared/stats' %>
            </section>
            <section class="micropost_form">
                <%= render 'shared/micropost_form' %>
            </section>
        </aside>
        <div class="col-md-8">
            <h3>Micropost Feed</h3>
            
            <%= render 'shared/feed' %>
            
            <%# binding.pry %>
            
            <%= will_paginate @feed_items, :previous_label=>'前のページ', :next_label=>'次のページ' %>
        </div>
    </div>
<% else %>

    <div class="center jumbotron">
        <h1>Micropostsへようこそ</h1>
        <br>
        <%= link_to "今すぐユーザ登録する", signup_path, class: "btn btn-lg btn-primary" %>
    </div>
<% end %>

